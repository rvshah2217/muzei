<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Settings activity -->

    <style name="Theme.MusicExtension.Settings" parent="android:Theme.Holo">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/MusicSettings.ActionBar</item>
    </style>

    <style name="MusicSettings.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:titleTextStyle">?android:textAppearanceMedium</item>
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:displayOptions">homeAsUp|showTitle|showHome</item>
    </style>

</resources>